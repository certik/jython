# -*- makefile -*-
#
# Generic Makefile rules for building JPython

#JAVAC = javac
JAVAC = jikes +E +D
JAVA = java
#OPT = -g:lines,vars,source
OPT = -g

CLASSPATH = "MUST OVERRIDE"
JIKESPATH = /usr/java1.2/jre/lib/rt.jar
CLASSPATHSWITCH = $(CLASSPATH):$(JIKESPATH)

.SUFFIXES= .java .class

%.class: %.java
	$(JAVAC) $(OPT) -classpath "$(CLASSPATHSWITCH)" $?

SOURCES = $(wildcard *.java)
CLASSES= $(SOURCES:%.java=%.class)

all: $(CLASSES)

clean:
	-rm *.class

realclean: clean
